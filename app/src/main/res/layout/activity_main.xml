<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.employeezy.homeworkgrader.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/displayTXT"
        android:textSize="50sp"
        android:layout_marginBottom="75dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/numGrad"
        android:textSize="45sp"
        android:layout_centerHorizontal="true"
        android:shadowColor="@android:color/holo_blue_light"
        android:layout_below="@+id/displayTXT"
        android:inputType="number"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/numGrad"
        android:id="@+id/but1"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:layout_marginTop="50dp"
        android:text="Grade"
        android:onClick="sendGrade"/>

    <Button
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_below="@+id/but1"
        android:id="@+id/but2"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:text="Pass of Fail"
        android:onClick="sendPassFail"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/but2"
        android:id="@+id/but3"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:text="5X"
        android:onClick="sendFiveX"/>

</RelativeLayout>
